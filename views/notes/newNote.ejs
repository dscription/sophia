<%- include('../partials/header') %>
<section class="container center-align">
  <form action="/topics/<%=topicId%>/contents/<%=contentId%>" method="POST">
    <h1>Take Notes</h1>
    <label for="noteTitle">
      <input type="text" id="noteTitle" name="title" value="Give your note a title">
    </label>
    <textarea name="text" id="notes"></textarea>
    <button class="btn" type="submit">Save Note</button>
  </form>
  <a class="btn" href="">Update Note</a>
  <a class="btn" href="">Delete Note</a>
</section>

