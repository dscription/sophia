<%- include('../partials/header') %>
<div class="container">
  <section>
    <div class="center-align" id="welcome-header">
      <h1>Welcome Polymaths!<h1>
          <h2>My name is Sophia, and i'm here to help you organize all of your learning interests.</h2>
          <a class="btn" href="/auth/google">Log In</a>
    </div>
  </section>
  <section>
    <div class="center-align">
      <h2>User Feed</h2>
    </div>
    <ul class="collapsible">
      <% users.forEach(u => { %>
      <li>
        <div class="collapsible-header valign-wrapper" id="user-card">
          <img width="75" height="75" class="circle" id="avatarPhoto" src="<%= u.avatar %>" alt="">
          <h2><%= u.name %></h2>
          <a href="/users/<%=u._id%>/friend" class="btn">Add Friend</a>
        </div>
        <div class="collapsible-body">
          <ul>
            <%u.topics.forEach(topic => {%>
            <%if(topic.isPublic) {%>
            <% topic.contents.forEach(content => {%>
            <li>
              <h4>Topic: <%=topic.name%></h4>
              <h4>Assignment: <%=content.name%></h4>
            </li>
            <%})%>
            <%}%>
            <%})%>
          </ul>
        </div>
      </li>
      <% }) %>
    </ul>
  </section>
</div>
<%- include('../partials/footer') %>